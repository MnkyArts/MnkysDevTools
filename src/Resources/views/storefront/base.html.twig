{% sw_extends '@Storefront/storefront/base.html.twig' %}

{#
    MnkysDevTools: Inject the collected block data as JSON for the inspector
    This is placed at the end of the body so all blocks have been registered
#}
{% block base_body %}
    {{ parent() }}
    {% if devtools_enabled is defined and devtools_enabled %}
        {{ devtools_render_block_data() }}
    {% endif %}
{% endblock %}

{#
    MnkysDevTools: Add data attributes directly to the body tag
    This ensures the attributes are present when the JS plugin initializes
#}
{% block base_body_classes %}
    {{ parent() }}
{% endblock %}

{% block base_body_attributes %}
    {{ parent() }}
    {% if devtools_enabled is defined and devtools_enabled %}
        data-devtools-enabled="true"
        data-devtools-editor="{{ devtools_editor|default('vscode')|e('html_attr') }}"
    {% endif %}
{% endblock %}
